{
  "version": 2,
  "builds": [
    {
      "src": "ai_trend_analyzer/viralbrain/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "ai_trend_analyzer/staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "ai_trend_analyzer/viralbrain/wsgi.py"
    }
  ],
  "env": {
    "SECRET_KEY": "",
    "DEBUG": "False",
    "ALLOWED_HOSTS": ".vercel.app,localhost,127.0.0.1",
    "CSRF_TRUSTED_ORIGINS": "https://*.vercel.app",
    "YOUTUBE_API_KEY": "",
    "GOOGLE_CLIENT_ID": "",
    "GOOGLE_CLIENT_SECRET": "",
    "DJANGO_SITE_ID": "1",
    "DJANGO_SETTINGS_MODULE": "viralbrain.settings",
    "PYTHONPATH": "/var/task/ai_trend_analyzer"
  }
}
