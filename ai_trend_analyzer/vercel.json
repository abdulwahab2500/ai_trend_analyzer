{
  "version": 2,
  "builds": [
    {
      "src": "viralbrain/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "viralbrain/wsgi.py"
    }
  ],
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
  "env": {
    "DJANGO_SETTINGS_MODULE": "viralbrain.settings",
    "PYTHONUNBUFFERED": "1",
    "SECRET_KEY": "*kta=@$903%1@#0+*b8pl9aa_@fgm6r#&9wln+)^bcw-$09%4v",
    "DEBUG": "False",
    "ALLOWED_HOSTS": ".vercel.app,localhost,127.0.0.1",
    "CSRF_TRUSTED_ORIGINS": "https://*.vercel.app"
  }
}
